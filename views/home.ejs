<h1>
    Codeial <%= title %>
</h1>
<%if(locals.user){ %>
<section id="feed-posts">
    <h4>Posts</h4>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="30" rows="3" placeholder="write something here..." required></textarea>
        <input type="submit" value="Post">
    </form>
</section>
<%}%>
<%if(locals.user){ %>
<ul class="posts">
    <% for (post of posts) {%>
    
        <%- include('_post') %>

    <%}%>
</ul>
<%}%>


<section id="user-friends">
    <h3>Friends</h3>
    <% for(u of all_users) { %>
        <p>
            <a href="/users/profile/<%= u.id %>"><%= u.name%></a>
        </p>
    <% } %>
</section>